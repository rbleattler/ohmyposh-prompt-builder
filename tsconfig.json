{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src",
    ".scratch/segmentTypeGenerator.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, ".scratch/dynamicTypeComponent.test.tsx", ".scratch/schemaTypeGenerator.test.tsx"  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "dist",
    ".scratch",
    ".trash",
    ".tasks",
    ".husky",
    ".github",
    "*test*.js",
    "*test*.jsx",
    "*test*.ts",
    "*test*.tsx",
    "test*",
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}